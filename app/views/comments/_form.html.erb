 <%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :user_id %><br>
    <%= form.text_field :user_id %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit "Send", class: "btn btn-success" %>
  </p>
<% end %>
